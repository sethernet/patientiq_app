<!DOCTYPE html>
<html>
  <head>
    <title>PatientiqApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar  navbar-inverse">
      <div class="navbar-class">
        <div class="container">
          <ul class="nav navbar-nav">
            <span><%=link_to "Company Home", companies_path %></span> |
            <span><%=link_to "Departments", departments_path%></span> |
            <span><%=link_to "Employees", employees_path%></span> |
            <span><%=link_to "Summary Report", summary_path%></span> |
            <span><% if user_signed_in? %>
                    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                  <% else %>
                    <%= link_to('Login', new_user_session_path)  %>
                  <% end %>
            </span>
          </ul>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
